{
    "version": 1.0,
    "globals": {
        "securityOverwrites": {
            "bearer": {
                "token": "YOUR_ACCESS_TOKEN"
            }
        }
    },
    "tests": {
        "contractTests": [
            {
                "openApiOperation": "*::/*",
                "statusSuccess": {
                    "enabled": true
                }
            },
            {
                "openApiOperation": "*::/*",
                "contentType": {
                    "enabled": true
                }
            },
            {
                "openApiOperation": "*::/*",
                "responseTime": {
                    "enabled": true,
                    "maxMs": 300
                }
            },
            {
                "openApiOperation": "*::/*",
                "headersPresent": {
                    "enabled": true
                }
            },
            {
                "openApiOperation": "*::/*",
                "jsonBody": {
                    "enabled": true
                }
            },
            {
                "openApiOperation": "*::/*",
                "schemaValidation": {
                    "enabled": true
                }
            }
        ],
        "variationTests": [
            {
                "openApiOperationId": "updatePet",
                "openApiResponse": "400",
                "variations": [
                    {
                        "name": "missingParams",
                        "overwrites": [
                            {
                                "overwriteRequestBody": [
                                    {
                                        "key": "name",
                                        "remove": true
                                    }
                                ]
                            }
                        ],
                        "tests": {
                            "contractTests": [
                                {
                                    "statusCode": {
                                        "enabled": true
                                    }
                                }
                            ]
                        }
                    }
                ]
            }
        ]
    }
}
